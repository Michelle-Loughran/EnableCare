@model Appointment

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Appointment" asp-action="Index">Appointments</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Appointment Details</li>
    </ol>
</nav>
<div class="card rounded shadow p-4">

<h3 class="mt-4 mb-4">Edit Appointment</h3>
       <form asp-action="EditAppointment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- hide the id as its not editable but needs to be in the -->
        <!-- form to ensure the Appointment passed to the controller is complete -->
        <input type="hidden" asp-for="Id" />
        <div class="row mt-3">
            <div class="col">
                 <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date.ToShortDateString()" class="form-control" >
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

        y<div class="col">
             <label asp-for="Time" class="form-label"></label>
             <input asp-for= "Time.ToShortTimeString()" class="form-control" >
             <span asp-validation-for="Time" class="text-danger"></span>
         </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="UserId" class="form-label"></label>
                <select asp-for="UserId" class="form-control" asp-items=@ViewBag.Carers>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="PatientId" class="form-label"></label>
                <select asp-for="PatientId" class="form-control" asp-items=@ViewBag.Patients>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
        </div>
        


        <div class="mt-3">
            <button type="submit" class="btn btn-primary" aria-label="save">Save</button>
            <a class="btn btn-secondary" asp-action="Index" asp-action="Index" aria-label="cancel">Cancel</a>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

     
