@model IList<CMS.Web.Models.Appointment.AppointmentViewModel>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">My Appointments</li>
    </ol>
</nav>
    
<div class="card border rounded shadow mt-4 p-4">
<div class="d-flex align-items-center justify-content-between">
    <h3> Appointment List</h3>
</div>
</div>
      <div class="d-flex align-items-center justify-content-between">
          <table class="table table-striped">
              <thead>
              <tr>

                  <th>Date</th> 
                  <th>Time</th>
                  <th>Carer Name</th> 
                  <th>Patient Name</th>
                  <th>Actions</th>
              </tr>
              </thead>
              <tbody>
              @foreach(var a in Model) 
              {
                  <tr>
                      <td>@a.Date.ToShortDateString()</td>
                      <td>@a.Time.ToShortTimeString()</td>
                      <td>@a.Name </td>

                      <td class="d-flex gap-1">      
                          <a asp-controller="Patient" asp-action="Details" asp-route-id="@a.PatientId">
                              <i class="bi bi-info-circle" title="View Patient"></i>
                          </a> 
             
                          @* <a asp-roles="manager" asp-action="Edit" asp-route-id="@a.Id"> *@
                          @*     <i class="bi bi-pencil" title="Edit Appointment"></i> *@
                          @* </a> *@
                          <a asp-roles="manager" asp-action="Delete" asp-route-id=@a.Id>
                              <i class="by bi-trash" title="Delete Appointment"></i>
                          </a>
                      </td>
                  </tr>
              }
              </tbody>
          </table>
          
</div>

