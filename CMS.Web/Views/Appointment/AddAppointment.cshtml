@model Appointment

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Appointment" asp-action="Index">Appointments</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Appointment Details</li>
    </ol>
</nav>
<div class="card rounded shadow p-4">
   <h3>Add Appointment</h3>
    
    <form asp-action="AddAppointment" asp-route-id="@Model.Id">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <div class="row mt-3">
            <div class="col">
                 <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" >
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

         <div class="col">
             <label asp-for="Time" class="form-label"></label>
             <input asp-for= "Time" class="form-control" >
             <span asp-validation-for="Time" class="text-danger"></span>
         </div>
         </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="UserId" class="form-label"></label>
                <select asp-for="UserId" class="form-control" asp-items=@ViewBag.Carers>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="PatientId" class="form-label"></label>
                <select asp-for="PatientId" class="form-control" asp-items=@ViewBag.Patients>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
        </div>
        


        <div class="mt-3">
            <button type="submit" class="btn btn-primary" aria-label="save">Save</button>
            <a class="btn btn-secondary" asp-action="Index" asp-action="Index" aria-label="cancel">Cancel</a>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

