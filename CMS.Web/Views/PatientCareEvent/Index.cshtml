@model IList<PatientCareEvent>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Appointments</li>
    </ol>
</nav>
      @* @if (User.IsInRole(Role.manager.ToString())) *@

    <div class="mt-4 mb-4">
       <!-- add an action link styled as a button to navigate to Create Action -->
       <a asp-action="Schedule" class="btn btn-primary btn-sm">Add Appointment</a>
    </div>

<div class="card border rounded shadow p-4">
    <h3>Appointment List</h3>
<!-- Title bar -->
</div>
    <div class="d-flex align-items-center justify-content-between">
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th> 
            <th>Time</th>
            <th>Carer Id</th> 
            @* <th>Carer Name</th> *@
            <th>Patient Id</th>
            @* <th>Patient Name</th>  *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var pce in Model) {
            <tr>
                <td>@pce.DateTimeOfEvent.ToShortDateString()</td>
                <td>@pce.DateTimeOfEvent.ToShortTimeString()</td>
                <td>@pce.UserId</td>
                @* <td>@pce.User.Name</td>  *@
                <td>@pce.PatientId</td>
                 @* <td>@pce.Patient.Name</td> *@
                <td>
                    <a asp-action="Details" asp-route-id="@pce.Id">
                            <i class="bi bi-info-circle" title="View Details"></i>
                    </a> 
                    @* @if (User.IsInRole("Admin") || User.IsInRole("Manager"))  *@
                    
                        @* <a asp-action="Edit" asp-route-id="@pce.Id"> *@
                        @*     <i class="bi bi-pencil" title="Edit Details"></i> *@
                        @* </a>  *@
                    
                    @* @if (User.IsInRole("Admin") || User.IsInRole("Manager"))  *@
                    
                        <a asp-action="Delete" asp-route-id=@pce.Id>
                            <i class="by bi-trash" title="Delete Details"></i>
                        </a> 
    
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

