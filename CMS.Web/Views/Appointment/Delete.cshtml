@model CMS.Web.Models.Appointment.AppointmentViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Appointment" asp-action="Index">Appointments</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Appoinment Details</li>
    </ol>
</nav>
<div class="card rounded shadow p-4">
  <h3 class="mb-4">Delete CareEvent?   <span class="ms-3 text-danger fs-5">   Are you sure?</span></h3> 
  

  <!-- display the patient using a <dl> as per Details.cshtml -->     
  <dl class="row">  
    <dt class="col-4 pb-1">Firstname</dt>
    <dd class="col-8 pb-1">@Model.Patient.Firstname</dd>

    <dt class="col-4 pb-1">Surname</dt>
    <dd class="col-8 pb-1">@Model.Patient.Surname</dd>

    <dt class="col-4 pb-1">Date</dt>
    <dd class="col-8 pb-1">@Model.Date</dd>

    <dt class="col-4 pb-1">Time</dt>
    <dd class="col-8 pb-1">@Model.Time</dd>
       
  </dl>
  
  <div class="mt-4">
    <!-- form to submit post request to DeleteConfirm action     --> 
    <form asp-action="DeleteConfirm" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" class="form-control"/>
        <button type="submit" class="btn btn-danger" aria-label="delete">Delete</button>
        <a class="btn btn-secondary" asp-controller="Appointment" asp-action="Index" asp-route-id="@Model.Id" >Cancel</a>
    </form>
  </div>
</div>


